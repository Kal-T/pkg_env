@import '../../../assets/scss/variables';
.menustyle {
  height: 100vh;
  width: 250px;
  position: fixed;
  overflow: auto;
  background-color: "#1e5799";
}

.collapsed-logo {
  padding: 0 calc(50% - 16px / 2);
  height: 40px;
  text-overflow: clip;
}

.collapsed-logo .logo-title {
  display: none;
}

.logo {
  height: 40px;
  padding-left: 24px;
  overflow: hidden;
}

.logo-img {
  color: white !important;
  font-size: 14px !important;
  margin: 0;
  font-size: 16px;
  line-height: 45px !important;
  cursor: pointer;
}

.logo .logo-title {
  margin-left: 10px;
  opacity: 1;
  flex: auto;
  min-width: 0;
  overflow: hidden;
  text-overflow: ellipsis;
}

.logo-title {
  color: white;
  font-size: 14px;
  transition: 1s;
}

.collapsed-user {
  padding: 0 calc(50% - 16px / 2);
  height: 40px;
  text-overflow: clip;
}

.collapsed-user .logo-user {
  display: none;
}

.user {
  height: 40px;
  padding-left: 24px;
  overflow: hidden;
}

.user-img {
  color: white !important;
  font-size: 14px !important;
  margin: 0;
  font-size: 16px;
  line-height: 45px !important;
}

.user .user-name {
  margin-left: 10px;
  opacity: 1;
  flex: auto;
  min-width: 0;
  overflow: hidden;
  text-overflow: ellipsis;
}

.user-name {
  color: white;
  font-size: 14px;
}

.main-sider-collapsed {
  width: 50px !important;
  flex: 0 0 50px !important;
  max-width: 50px !important;
  min-width: 50px !important;
}

#components-layout-demo-custom-trigger .trigger {
  padding: 0 24px;
  font-size: 18px;
  line-height: 64px;
  cursor: pointer;
  transition: color 0.3s;
}

#components-layout-demo-custom-trigger .trigger:hover {
  color: #1890ff;
}

.site-layout .site-layout-background {
  background: #fff;
}

.ant-menu.ant-menu-dark,
.ant-menu-dark .ant-menu-sub,
.ant-menu.ant-menu-dark .ant-menu-sub {
  color: rgba(255, 255, 255, 0.65);
  background: #0a466a;
}
/* .ant-menu-inline-collapsed-tooltip {
  display: none;
} */
.ant-menu-sub.ant-menu-inline{
  font-size: $sm-font-size;
}